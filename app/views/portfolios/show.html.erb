<%- model_class = Portfolio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:buydate) %>:</strong></dt>
  <dd><%= @portfolio.buydate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buyprice) %>:</strong></dt>
  <dd><%= @portfolio.buyprice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:profit) %>:</strong></dt>
  <dd><%= @portfolio.profit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:volum) %>:</strong></dt>
  <dd><%= @portfolio.volum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:option) %>:</strong></dt>
  <dd><%= @portfolio.option %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= @portfolio.account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quotation_id) %>:</strong></dt>
  <dd><%= @portfolio.quotation_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketdate) %>:</strong></dt>
  <dd><%= @portfolio.marketdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:selldate) %>:</strong></dt>
  <dd><%= @portfolio.selldate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sellprice) %>:</strong></dt>
  <dd><%= @portfolio.sellprice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @portfolio.duration %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              portfolios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_portfolio_path(@portfolio), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              portfolio_path(@portfolio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
