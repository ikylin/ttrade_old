<%= simple_form_for @everydaytip, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :tip %>
  <%= error_span(@everydaytip[:tip]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                everydaytips_path, :class => 'btn btn-default' %>
<% end %>
